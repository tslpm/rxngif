<% if @pic.errors.any? %>
  <div id="errors_collection">
    <ul>
      <% @pic.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="picture">
  <%= form_for(@pic, remote: true) do |f| %>
    <fieldset>
      <div>
        <%= f.label :url %>
        <%= f.text_field :url, :placeholder => "Enter the picture's source" %>
      </div>
      <div>
        <%= f.label :caption %>
        <%= f.text_field :caption, :placeholder => "Enter a caption" %>
      </div>
      <div>
        <%= f.label :favorite %>
        <%= f.check_box :favorite %>
      </div>
    </fieldset>
    <%= f.submit %>
  <% end %>
</div>
